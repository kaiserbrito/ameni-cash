<% content_for :title, "AmeniCash Products" %>

<div class="container mx-auto">
  <h1 class="text-3xl font-semibold mb-4">All Products</h1>

  <%# Check if there are any products to display %>
  <% if @products.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
      <%# Iterate through each product and display its details %>
      <% @products.each do |product| %>
        <%= render product %>
      <% end %>
    </div>
  <% else %>
    <p class="text-xl text-gray-500">No products available.</p>
  <% end %>
</div>

<div class="w-1/2">
  <%= render 'carts/cart_details', cart: @cart %>
</div>
