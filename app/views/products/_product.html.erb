<div class="bg-white rounded-lg shadow-md p-4">
  <h2 class="text-xl font-semibold mb-2"><%= product.name %></h2>
  <p class="text-gray-700 mb-2">Price: <%= product.price.format %></p>
  <% if product.promotion %>
    <p class="text-green-500 mb-2">Promotion: <%= product.promotion.name %></p>
  <% else %>
    <p class="text-gray-500 mb-2">No promotion available</p>
  <% end %>
  <%= button_to "Add to Cart", add_to_cart_product_path(product), method: :post, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
</div>
