<% if @cart&.cart_products.present? %>
  <div class="bg-gray-100 p-4 rounded-lg">
    <h2 class="text-xl font-semibold mb-4">Cart</h2>
    <% @cart.cart_products.each do |cart_product| %>
      <div class="flex justify-between items-center mb-2">
        <span><%= cart_product.product.name %></span>
        <span><%= cart_product.quantity %></span>
        <span><%= cart_product.total_price.format %></span>
        <%= button_to cart_remove_cart_product_path(cart, cart_product), method: :delete, remote: true, class: "text-red-500 hover:text-red-700" do %>
          <i class="fa fa-minus-circle"></i>
        <% end %>
      </div>
    <% end %>
    <hr class="my-4">
    <div class="flex justify-between items-center">
      <span>Total:</span>
      <span><%= @cart.total_price.format %></span>
    </div>
  </div>
<% else %>
  <p class="text-gray-500">Your cart is empty.</p>
<% end %>
